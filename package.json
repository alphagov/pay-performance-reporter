{
  "name": "pay-performance-reporter",
  "description": "performance report updater",
  "version": "0.0.1-SNAPSHOT",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^12.21.0"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ],
    "ignore": [
      "app/assets/**/*.js",
      "node_modules_local/**/*.*"
    ]
  },
  "scripts": {
    "compile": "grunt generate-assets",
    "clean": "grunt clean",
    "start": "node start.js",
    "start:dev": "nodemon -e js,njk -r dotenv/config start-dev.js",
    "lint": "./node_modules/.bin/standard --fix",
    "lint-sass": "./node_modules/.bin/sass-lint -v",
    "test": "NODE_ENV=test ./node_modules/mocha/bin/mocha '!(node_modules)/**/*.test'.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alphagov/pay-performance-reporter.git"
  },
  "dependencies": {
    "@govuk-pay/pay-js-commons": "3.0.10",
    "aws-sdk": "2.899.0",
    "express": "4.17.x",
    "lodash": "4.17.x",
    "minimist": "1.2.x",
    "moment": "^2.29.1",
    "request": "^2.88.2",
    "requestretry": "^5.0.0",
    "url-join": "^4.0.1",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.1",
    "chai": "^4.3.4",
    "cheerio": "^1.0.0-rc.6",
    "chokidar-cli": "latest",
    "dotenv": "^8.2.0",
    "envfile": "^5.2.0",
    "eslint": "6.8.x",
    "grunt": "1.4.x",
    "grunt-babel": "^8.0.0",
    "grunt-browserify": "^6.0.0",
    "grunt-cli": "1.4.x",
    "grunt-contrib-clean": "2.0.x",
    "grunt-contrib-copy": "1.0.x",
    "grunt-contrib-uglify": "^5.0.1",
    "grunt-contrib-watch": "1.1.x",
    "grunt-sass": "3.1.x",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "7.2.x",
    "nock": "13.0.x",
    "node-sass": "5.0.x",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "proxyquire": "~2.1.3",
    "sass-lint": "^1.13.1",
    "sinon": "10.0.x",
    "snyk": "1.576.0",
    "standard": "^16.0.3",
    "supertest": "^6.1.3"
  }
}
