{
  "name": "pay-performance-reporter",
  "description": "performance report updater",
  "version": "0.0.1-SNAPSHOT",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^12.22.1"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ],
    "ignore": [
      "node_modules_local/**/*.*"
    ]
  },
  "scripts": {
    "start": "node index.js",
    "start:dev": "node -r dotenv/config index.js",
    "lint": "./node_modules/.bin/standard --fix",
    "test": "NODE_ENV=test ./node_modules/mocha/bin/mocha '!(node_modules)/**/*.test'.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alphagov/pay-performance-reporter.git"
  },
  "dependencies": {
    "@govuk-pay/pay-js-commons": "3.2.1",
    "aws-sdk": "2.942.0",
    "express": "4.17.x",
    "joi": "^17.4.1",
    "lodash": "4.17.x",
    "minimist": "1.2.x",
    "moment": "^2.29.1",
    "request": "^2.88.2",
    "requestretry": "^5.0.0",
    "url-join": "^4.0.1",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "envfile": "^5.2.0",
    "eslint": "7.30.x",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.0",
    "mocha": "7.2.x",
    "nock": "13.1.x",
    "proxyquire": "~2.1.0",
    "sinon": "11.1.1",
    "standard": "^16.0.3"
  }
}
